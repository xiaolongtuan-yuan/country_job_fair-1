.containers {
  position: absolute;
  top: 10.8vh;
  z-index: 1;
  height: 87vh;
  width: 100%;
  background: #FFFFFF;
  display: flex;
  flex-direction: column;
}
.catalog {
  flex: 1;
  width: 100%;
  height: 100%;
  background: #fff;
  display: flex;
  border-top: 1px solid #fafafa;
}

.nav {
  width: 280rpx;
  height: 100%;
  border-radius: 16rpx;
  background-color: #f8f8f8;
  margin-right: 30rpx;
}

.item {
  text-align: center;
  line-height: 122rpx;
  width: 100%;
  height: 122rpx;
  color: #333;
  font-size: 28rpx;
  margin-top: 32rpx;
}

.itemactive {
  text-align: center;
  line-height: 122rpx;
  width: 100%;
  height: 122rpx;
  border-left: 10rpx solid #fd7564;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 3px 10px 0px rgba(253, 117, 100, 0.16);
  border-radius: 16rpx;
}

.right{
  height: 100%;
  width: 468rpx;
}

