page{
    overflow: hidden;
  }
 
  .containers {
    margin-top: 50rpx;
    height: 1300rpx;
    width: 100%;
    background: #FFFFFF;
    display: flex;
    flex-direction: column;
  }

   .input {
    font-size: 26rpx;
    color: #bbb;
    line-height: 70rpx;
    text-align: center;
  } 
  
  .catalog {
    flex: 1;
    width: 100%;
    height: 100%;
    background: #fff;
    display: flex;
    border-top: 1px solid #fafafa;
  }
  
  .nav {
    width: 40%;
    height: 100%;
    border-radius: 16rpx;
    background-color: #f8f8f8;
    margin-right: 30rpx;
  }

  .nav .item {
    text-align: center;
    line-height: 90rpx;
    width: 100%;
    height: 90rpx;
    color: #333;
    font-size: 28rpx;
    margin-top: 32rpx;
  }
  
  .nav .item.active {
    text-align: center;
    line-height: 122rpx;
    width: 100%;
    height: 122rpx;
    border-left: 10rpx solid #fd7564;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px 3px 10px 0px rgba(253, 117, 100, 0.16);
    border-radius: 16rpx;
  }
 
  .right{
    height: 100%;
    width: 50%;
  }
  
  .bd {
    width: 472rpx;
    height: 232rpx;
    border-radius: 28rpx;
    background: rgba(248, 248, 248, 1);
    display: flex;
    margin-top: 28rpx;

    text-align: center;
    line-height: 90rpx;
    color: #333;
    font-size: 28rpx;
  }

 