/* 2-1 招聘列表容器 */


.content{
  position: absolute;
  top: 11vh;
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100vw;
  align-items: flex-start;
}
.list_left{
  display: flex;
  width: 300rpx;
  flex-direction: column;
  margin-right: 10rpx;
}
.list_item_left{
  display: flex;
  flex-direction: column;
  width: 300rpx;
  float: none;
  margin-top: 1.5vh;

  background: #FFFFFF;
  box-shadow: 0rpx 8rpx 8rpx rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
}
.list_right{
  display: flex;
  flex-direction: column;
  margin-left: 10rpx;
}
.list_item_right{
  display: flex;
  flex-direction: column;
  width: 300rpx;
  float: none;
  background: #FFFFFF;
  box-shadow: 0rpx 8rpx 8rpx rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  margin-top: 1.5vh;
}


