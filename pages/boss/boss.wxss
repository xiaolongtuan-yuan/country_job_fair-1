.poster {
    position: fixed;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    background-color: transparent;
    display: flex;
    flex-flow: column nowrap;
    justify-content: flex-start;
    align-items: center;
    z-index: 1;
}
.poster .mask{
    position: absolute;
    background-color: rgba(0,0,0,0.5);
    height: 100%;
    width: 100%;
    z-index: 2;
}


.saveImage{

    text-align: center;
    font-size: 45rpx;
    font-weight: bold;
    padding-top: 10rpx;
    height: 100rpx;
    width:250rpx;
